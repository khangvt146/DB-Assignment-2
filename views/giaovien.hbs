<div class="giaovien_body">
    {{!---------------------------------DROPDOWN FILTER -------------------------------------}}
    <div class="dropdown_giaovien">
        <div class="row">
            <div class="col-lg-2 col-md-5 col-sm-12 mr-3">
                <div class="form-group"> <label for="GV_filter">
                        <div class="filter-title">Lớp</div>
                    </label> <select class="form-control" id="ccmonth">
                        <option value=" "></option>
                        <option>Lớp 6</option>
                        <option>Lớp 7</option>
                        <option>Lớp 8</option>
                        <option>Lớp 9</option>
                        <option>Lớp 10</option>
                        <option>Lớp 11</option>
                        <option>Lớp 12</option>
                    </select>
                </div>
            </div>

            <div class="col-lg-2 col-md-5 col-sm-12 mr-3">
                <div class="form-group"> <label for="GV_filter">
                        <div class="filter-title">Môn học</div>
                    </label> <select class="form-control" id="ccmonth">
                        <option value=" "></option>
                        <option>Ngữ Văn</option>
                        <option>Toán Học</option>
                        <option>Tiếng Anh</option>
                        <option>Tin Học</option>
                        <option>Vật Lý</option>
                        <option>Hóa Học</option>
                        <option>Sinh Học</option>
                        <option>Lịch Sử</option>
                    </select>
                </div>
            </div>

            <div class="col-lg-5 col-md-6 col-sm-12">
                <div class="search-class">
                    <form class="search-class" action="#" method="post">
                        <input type="text" name="search" class="search-input" placeholder="Nhập tên giáo viên cần tìm">
                        <button class="search-button" type="submit"><i class="fas fa-search"></i></button>
                    </form>
                </div>
            </div>

            <div class="col-lg-2 col-md-5 col-sm-12 mr-3">
                <div class="add_button">
                    <button class="button"><i class="fas fa-plus mr-2"></i>THÊM </button>
                </div>
            </div>
        </div>
    </div>



    {{!---------------------------------MAIN -------------------------------------}}
    <div class="giaovien_container">
        <div class="row row-card">
            {{#each TeacherArray}}
            <div class="col-sm-8 col-md-6 col-lg-3">
                <div class="card">
                    <img class="card-img-top" src="{{this.image}}" alt="Card image cap" />
                    <div class="card-body">
                        <div class="card-title">{{this.name}}</div>
                        <div class="info">
                            <div class="work"><i class="fas fa-briefcase mr-2"></i>{{this.place}}</div>

                            <div class="grade"><i class="fas fa-graduation-cap mr-2"></i>{{this.grade}}</div>

                            <div class="descrip"><i class="fas fa-info-circle mr-2"></i>{{this.description}}</div>

                        </div>
                    </div>
                     <div class="info_button">
                            <button class="button"><i class="fas fa-info-circle mr-2"></i>Chi tiết </button>
                        </div>
                </div>
            </div>
            {{/each}}
        </div>
   </div>

    {{!
    -------------------------------------------------INFO COURSE------------------------------------------------------- }}
    
</div>