            {{else}}
            <form action="/course-filter" method="POST" role="form" name="filter-form">
                <input type="text" class="form-control" id="filter_grade_form" name="filter_grade_form" hidden>
                <input type="text" class="form-control" id="filter_subject_form" name="filter_subject_form" hidden>
                <input type="text" class="form-control" id="filter_type_form" name="filter_type_form" hidden>
                <input type="text" class="form-control" id="filter_gradeType_form" name="filter_gradeType_form" hidden>
            </form>
            {{/if}}
        </div>
    </div>
