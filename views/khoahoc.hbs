                            <option value="Lớp 8">Lớp 8</option>
                            <option value="Lớp 9">Lớp 9</option>
                            <option value="Lớp 10">Lớp 10</option>
                            <option value="Lớp 11">Lớp 11</option>
                            <option value="Lớp 12">Lớp 12</option>
                        </select>

                        <label for="">Loại trình độ</label>
                        <select id="add-course-level" name="KH_GradeType">
                            <option value="HOCTOT">Học Tốt</option>
                            <option value="MASTER">Master</option>
                            <option value="MASTERZ">MasterZ</option>
                            <option value="BOTRO">Bổ trợ</option>
                            <option value="PEN-I">Pen-I</option>
                            <option value="PEN-C">Pen-C</option>
                            <option value="PEN-M">Pen-M</option>
                        </select>

                        <label for="">Môn học</label>
                        <select id="add-course-subject" name="KH_Subject">
                            <option value=0>Tổng hợp nhiều môn</option>
                            <option value=1>Ngữ Văn</option>
                            <option value=2>Toán Học</option>
                            <option value=3>Tiếng Anh</option>
                            <option value=4>Tin Học</option>
                            <option value=5>Vật Lý</option>
                            <option value=6>Hóa Học</option>
                            <option value=7>Sinh Học</option>
                            <option value=8>Lịch Sử</option>
                        </select>

                        <label for="">Ngày bắt đầu</label>
                        <input type="date" id="add-course-startDate" name="KH_StartDate">
                    </form>
                </div>


                <div class="col-lg-6 col-12">
                    <form action="#" class="add-course__input" method="POST" name="add-khoahoc-form">
                        <label for="">Ngày kết thúc</label>
                        <input type="date" id="add-course-endDate" name="KH_EndDate">

                        <label for="">Hạn đăng ký</label>
                        <input type="date" id="add-course-submitDate" name="KH_SubmitDate">

                        <label for="">Học phí</label>
                        <input type="text" id="add-course-tuition" name="KH_Tuition">

                        <label>Ảnh minh họa</label>
                        <input type="file" id="add-course-image" name="KH_Image">

                        <label for="">Mô tả</label>
                        <input type="text" id="add-course-description" name="KH_Description">

                    </form>
                </div>
            </div>
            <button class="btn btn-primary btn-block" type="submit"><i class="fas fa-plus mr-2"></i>Thêm khóa
                học</button>
        </div>
    </div>



    {{!---------------------------------Update COURSE-------------------------------------}}
