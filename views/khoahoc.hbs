                            <option value=" "></option>
                            <option>Ngữ Văn</option>
                            <option>Toán Học</option>
                            <option>Tiếng Anh</option>
                            <option>Tin Học</option>
                            <option>Vật Lý</option>
                            <option>Hóa Học</option>
                            <option>Sinh Học</option>
                            <option>Lịch Sử</option>
                        </select>

                        <label for="">Ngày bắt đầu</label>
                        <input type="date" id="add-course_startDate" name="KH_StartDate">
                    </form>
                </div>


                <div class="col-lg-6 col-12">
                    <form action="#" class="add-course__input" method="POST" name="add-khoahoc-form">
                        <label for="">Ngày kết thúc</label>
                        <input type="date" id="add-course_endDate" name="KH_EndDate">

                        <label for="">Hạn đăng ký</label>
                        <input type="date" id="add-course_submitDate" name="KH_SubmitDate">

                        <label for="">Học phí</label>
                        <input type="text" id="add-course_tuition" name="KH_Tuition">

                        <label>Ảnh minh họa</label>
                        <input type="file" id="add-course_image" name="KH_Image">

                        <label for="">Mô tả</label>
                        <input type="text" id="add-course_descrip" name="KH_Description">

                    </form>
                </div>
            </div>
            <button class="btn btn-primary btn-block" type="submit"><i class="fas fa-plus mr-2"></i>Thêm khóa
                học</button>
        </div>
    </div>



