<div class="hocvien-body">

  {{!---------------------------------DROPDOWN FILTER -------------------------------------}}
  <div class="dropdown_hocvien">

    <div class="row">
      <div class="search-class">
        <form class="search-class" action="#" method="POST">
          <input type="text" name="search" class="search-input" placeholder="Nhập tên học viên cần tìm">
          <button class="search-button" type="submit"><i class="fas fa-search"></i></button>
        </form>
      </div>
    </div>


    <div class="row" id="drop">
      <div class="col-lg-3 col-md-5 col-sm-12 mr-4">
        <div class="form-group">
          <label for="HV_sort">
            <div class="filter-title">Sắp xếp</div>
          </label>
          <select class="form-control" id="sort">
            <option value=" "></option>
            <option>ID (tăng dần)</option>
            <option>ID (giảm dần)</option>
            <option>Họ (tăng dần)</option>
            <option>Họ (giảm dần)</option>
            <option>Tên (tăng dần)</option>
            <option>Tên (giảm dần)</option>
            <option>Năm sinh (tăng dần)</option>
            <option>Năm sinh (giảm dần)</option>
          </select>
        </div>
      </div>

      <div class="col-lg-2 col-md-5 col-sm-12 mr-4">
        <div class="form-group">
          <label for="HV_filter">
            <div class="filter-title">Số khóa tham gia</div>
          </label> <select class="form-control" id="filter_hocvien_num">
            <option value=" "></option>
            <option >0 - 2</option>
            <option >3 - 5</option>
            <option >5 - 8</option>
            <option >Nhiều hơn 8</option>
          </select>
        </div>
      </div>

      <div class="col-lg-2 col-md-5 col-sm-12">
        <div class="form-group"> <label for="KH_filter">
            <div class="filter-title">Giới tính</div>
          </label> <select class="form-control" id="filter_gender">
            <option value=" "></option>
            <option value="Nam">Nam</option>
            <option value="Nữ">Nữ</option>
          </select>
        </div>
      </div>

      <div class="col-lg-3 col-md-5 col-sm-12">
        <div class="add_button">
          <button class="button"><i class="fas fa-plus mr-2"></i>THÊM </button>
        </div>
      </div>


    </div>

  </div>



  {{!---------------------------------MAIN -------------------------------------}}
  <div class="hocvien_container">
    <div class="container first-container col-sm-12 pull-left" style="padding: 15px">
      <table class="table table-condensed">
        <thead class="thead-light" style="text-align:center">
          <tr>
            <th>ID</th>
            <th>Họ và tên</th>
            <th>Ngày sinh</th>
            <th>Giới tính</th>
            <th>SĐT</th>
            <th>Số khóa tham gia</th>
            <th>Xem chi tiết</th>
            <th>Chỉnh sửa</th>
          </tr>
        </thead>
        
        <tbody>
          {{#each UserArray}}
                <tr class="sub-container student-content" style="text-align:center">
                    <td id = 'student-id'>{{this.id}}</td>
                    <td id = 'student-ten'>{{this.ho_va_ten}}</td>
                    <td id = 'student-ngay_sinh'>{{formatDate this.ngay_sinh}}</td>
                    <td id = 'student-gioi_tinh'>{{formatGender this.gioi_tinh}}</td>
                    <td id = 'student-sdt'>{{this.sdt}}</td>
                    <td id = 'student-KHTG'>{{this.so_KHTG}}</td>
                    <td>
                    <button type="button" class="btn btn-success exploder i_btn" id="i_btn" data-id="{{this.id}}">
                        <span class="glyphicon glyphicon-search"></span>
                    </button>
                    </td>
                    <td>
                    <button type="button" class="btn" id="u_btn" data-id="{{this.id}}"></button>
                    </td>
                    <td style="display:none;" id = "student-email">{{this.email}}</td>
                    <td style="display:none;" id="student-truong">{{this.truong_hoc}}</td>
                    <td style="display:none;" id="student-huyen">{{this.quan_huyen}}</td>
                    <td style="display:none;" id="student-xa">{{this.xa_phuong}}</td>
                    <td style="display:none;" id="student-tinh">{{this.tinh_tp}}</td>
                    <td style="display:none;" id="student-diem">{{this.tong_diem}}</td>

                </tr>

          {{/each}}
        </tbody>
      </table>

    </div>
  </div>

  {{!-------------------------------------------------INFO HOC
  VIEN-------------------------------------------------------}}
